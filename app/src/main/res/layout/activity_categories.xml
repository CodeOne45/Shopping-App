<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".CategoriesApi">

    <LinearLayout
        android:id="@+id/topbar"
        android:gravity="right"
        android:layout_marginTop="20sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usama Amin"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.0"
                android:textSize="14sp"
                android:textColor="#6d6b6c" />


        </LinearLayout>

        <ImageView
            android:layout_marginStart="8dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_gray"
            android:src="@drawable/user_icon"
            android:padding="11dp"
            android:onClick="logout"/>

    </LinearLayout>

    <TextView
        android:layout_below="@+id/topbar"
        android:id="@+id/categorie_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:text="Categories"
        android:fontFamily="@font/montserrat"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <LinearLayout
        android:id="@+id/category_layout"
        android:layout_below="@+id/categorie_txt"
        android:layout_width="match_parent"
        android:focusableInTouchMode="true"
        android:focusedByDefault="false"
        android:layout_height="40dp"
        android:background="@drawable/input_bg"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/search_black"
            android:padding="6dp"
            app:tint="#6d6b6c"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/search_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:hint="Search"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="7dp"
            android:textColor="@android:color/black"
            android:textColorHint="#6d6b6c"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categorie_recycler"
        android:layout_below="@+id/category_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="15dp" />

    <ImageView
        android:id="@+id/shopping"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/shoppin_logo"
        android:background="@drawable/shopping_floating"
        app:tint="@android:color/white"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:onClick="go_toCart"/>

</RelativeLayout>